<%# title "Admin/Pages" %>
<h1>Set Site Pages</h1>
<div align ="right"><%= link_to "New Admin/Page", new_admin_page_path, :style=>"text-color:#ffffff"%></div>
<table id="insured_list" border=1 class="list_table_2">
  <tr>
    <th>Title</th>
    <th colspan=4>Actions</th>
    <!-- <th>Content</th> -->
  </tr>
  <% for page in @pages %>
    <tr>
      <td><%= page.title %></td>
      <!-- <td><%#= page.content %></td> -->
      <td><%= link_to "Show", [:admin, page] %></td>
      <td><%= link_to "Edit", edit_admin_page_path(page) %></td>
      <td><%= link_to "Destroy", [:admin, page], :confirm => 'Are you sure?', :method => :delete %></td>
	    <td><%= link_to "click here", "/#{page.title}/", :id => page.title %>
    </tr>
  <% end %>
</table>